<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/item_bg_bill"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="225dp">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提货单号："
        android:textColor="#ff9c9db3"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tv_list_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HT1316516548"
        android:textColor="#ff2b2c44"
        android:textSize="12sp"
        />
    <ImageView
        android:layout_marginLeft="10dp"
        android:background="@mipmap/icon_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="调度方："
                android:textColor="#ff9c9db3"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_dispatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南京联合物流有限公司"
                android:textColor="#ff2b2c44"
                android:textSize="12sp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"

        android:background="@color/colorItemAddress"

        android:layout_width="match_parent"
        android:layout_height="72dp">
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@mipmap/icon_blue_yellow"
                android:layout_width="wrap_content"
                android:layout_height="25dp"></LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="@mipmap/icon_blue_yellow"
                android:layout_width="wrap_content"
                android:layout_height="25dp"></LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="@mipmap/icon_blue_yellow"
                android:layout_width="wrap_content"
                android:layout_height="25dp"></LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="@mipmap/icon_blue_yellow"
                android:layout_width="wrap_content"
                android:layout_height="25dp"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"

            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

              <ImageView
                  android:background="@mipmap/icon_addr"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货地址"
                    android:textColor="#ff585974"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_address"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏省苏州市吴中区金猫9号"
                android:textColor="#ff2b2c44"
                android:textSize="16sp"
                />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提货时间："
                android:textColor="#ff9c9db3"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019/06/27 12:45  —  2019/06/27 13:45"
                android:textColor="#ff2b2c44"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:background="@color/colorEditTextLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/layout_loading"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_bhyy"
                android:background="@drawable/bg_red_button"
                android:gravity="center"
                android:layout_width="88dp"
                android:layout_height="30dp"
                android:text="驳回原因"
                android:textColor="#fff35959"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_dhzc"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点货装车"
                android:textColor="#ff3d68eb"
                android:textSize="16sp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
