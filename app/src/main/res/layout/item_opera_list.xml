<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/item_bg_bill"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_addr_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="苏州市"
                    android:textColor="#ff2b2c44"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_grass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/icon_route" />

                <TextView
                    android:id="@+id/tv_addr_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="柳州市"
                    android:textColor="#ff2b2c44"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调度"
                    android:textColor="#ff2b2c44"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物信息："
                    android:textColor="#ff9c9db3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hwxx"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="南京联合物流有限公司"
                    android:textColor="#ff2b2c44"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本次装载件数/数量："
                    android:textColor="#ff9c9db3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bczz"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="15/2000"
                    android:textColor="#ff2b2c44"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包装类型："
                    android:textColor="#ff9c9db3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bzlx"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="南京联合物流有限公司"
                    android:textColor="#ff2b2c44"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接货地址："
                    android:textColor="#ff9c9db3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_jhdz"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="10"
                    android:textColor="#ff2b2c44"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交货地址："
                    android:textColor="#ff9c9db3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_jiaohdz"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="2019/06/27 13:45"
                    android:textColor="#ff2b2c44"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="要求到达时间："
                    android:textColor="#ff9c9db3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_yqddsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019/06/27 12:45 "
                    android:textColor="#ff2b2c44"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorEditTextLine" />

            <LinearLayout
                android:id="@+id/layout_vis"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_xq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="详情"
                        android:textColor="#ff3d68eb"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorEditTextLine" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ckewm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="查看二维码"
                        android:textColor="#ff3d68eb"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_bh"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_red_button_s"
                        android:gravity="center"
                        android:text="驳回"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorEditTextLine" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_sl"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_blue_button"
                        android:gravity="center"
                        android:text="受理"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_bhzt"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_red_button"
                        android:gravity="center"
                        android:text="驳回"
                        android:textColor="@color/colorRed"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_ycf"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_red_button"
                        android:gravity="center"
                        android:text="已出发"
                        android:textColor="@color/colorRed"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_cf"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_blue_button"
                        android:gravity="center"
                        android:text="出发"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_smjh"
                        android:layout_width="88dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_blue_button"
                        android:gravity="center"
                        android:text="扫码接货"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_yswc"
                        android:layout_width="88dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_blue_button"
                        android:gravity="center"
                        android:text="运输完成"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
